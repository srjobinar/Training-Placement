<% provide :title, "login" %>

<h1> Log in </h1>

<div class="row">
  <div class="col-md-6 col-xs-offset-3">
      <%= form_for(:session, url: admin_login_path) do |f| %>

      <%= f.label :email %>
      <%= f.text_field :email, class: "form-control" %>

      <%= f.label :password %>
      <%= f.password_field :password, class: "form-control" %>

      <%= f.submit "Log in", class: "btn btn-primary" %>
      <% end %>
  </div>
</div>
