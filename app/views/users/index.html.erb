<% provide :title, "Index" %>

<div class="container-fluid">
  <div class="row">
      <div class="col-md-5 col-md-offset-1 user_details">
          <h1><%= @user.name %></h1>
          <p><%= @user.branch.name %></p>
      </div>
      <div class="col-md-6 navigation_bar">
          <ul class="nav nav-pills" role="tablist">
            <li class="active"><a href="#">Available</a></li>
            <li><a href="#">In Progress</a></li>
            <li><a href="#">Completed</a></li>
          </ul>
      </div>
    </div>

    <div ng-app='tnpApp' ng-controller='ExampleCtrl'>

      <div class="table-responsive">

        Search: <input ng-model="query">

       <table class="table table-striped">

         <thead>
           <tr>
             <th>NAME</th>
             <th>ID</th>
           </tr>
         </thead>

         <tbody>
             <tr ng-repeat="c in companies | filter: query">
               <td>{{c.name}}</td>
               <td>{{c.id}}</td>
             </tr>
         </tbody>

       </table>

      </div>

    </div>
    
</div>
